{
  "name": "archi-navi",
  "version": "0.1.0",
  "private": true,
  "description": "Local-first architecture navigation tool for distributed service environments",
  "scripts": {
    "dev": "turbo run dev --filter=@archi-navi/web",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\" --ignore-path .gitignore",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "turbo run db:generate --filter=@archi-navi/db",
    "db:migrate": "turbo run db:migrate --filter=@archi-navi/db",
    "db:studio": "turbo run db:studio --filter=@archi-navi/db"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "prettier": "^3.5.1",
    "tailwindcss": "^4.2.0",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.26.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "drizzle-orm": "^0.45.1"
    }
  }
}
