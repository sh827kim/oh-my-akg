{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "include": [
        "scripts/**/*",
        "cli/**/*",
        "lib/**/*",
        "packages/core/src/**/*",
        "packages/inference/src/**/*",
        "packages/cli/src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
