{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true
  },
  "include": [
    "packages/**/*.ts",
    "cli/**/*.ts",
    "lib/**/*.ts",
    "scripts/**/*.ts",
    "reproduce_db_error.ts"
  ],
  "exclude": [
    "node_modules",
    "apps/web"
  ]
}
