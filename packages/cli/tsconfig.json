{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "../..",
    "paths": {
      "@archi-navi/core": ["packages/core/src/index.ts"],
      "@archi-navi/core/*": ["packages/core/src/*"],
      "@archi-navi/config": ["packages/config/src/index.ts"],
      "@archi-navi/config/*": ["packages/config/src/*"],
      "@archi-navi/inference": ["packages/inference/src/index.ts"],
      "@archi-navi/inference/*": ["packages/inference/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../../packages/core/src/**/*",
    "../../lib/**/*"
  ],
  "exclude": ["node_modules"]
}
